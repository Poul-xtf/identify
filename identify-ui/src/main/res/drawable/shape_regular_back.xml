<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/shape_id">
        <!-- 正三角 -->
        <rotate
            android:fromDegrees="0"
            android:pivotX="0%"
            android:pivotY="100%"
            android:toDegrees="90">
            <shape android:shape="rectangle">
                <size
                    android:width="@dimen/dimen_132"
                    android:height="@dimen/dimen_54" />
                <solid android:color="@color/camera_black_40" />
            </shape>
        </rotate>
    </item>
    <item android:id="@+id/shape_id_1">
        <!-- 正三角 -->
        <rotate
            android:fromDegrees="6"
            android:pivotX="0%"
            android:pivotY="100%"
            android:toDegrees="90">
            <shape android:shape="rectangle">
                <solid android:color="@color/camera_gray_aa" />
            </shape>
        </rotate>
    </item>
</layer-list>