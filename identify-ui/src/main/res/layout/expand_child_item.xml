<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_item_bottom"
    android:paddingBottom="@dimen/dimen_17">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/rl_label_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_14"
            android:layout_marginRight="@dimen/dimen_7"
            android:layout_weight="1"
            android:background="@drawable/shape_input_frame">

            <ImageView
                android:id="@+id/iv_car_front"
                android:layout_width="@dimen/dimen_25"
                android:layout_height="@dimen/dimen_25"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_14"
                android:background="@mipmap/icon_code" />

            <TextView
                android:id="@+id/tv_car_front"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_car_front"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_7"
                android:text="@string/i_button_car_front"
                android:textColor="@color/camera_gray_90"
                android:textSize="@dimen/dimen_13" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_label_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_7"
            android:layout_marginRight="@dimen/dimen_14"
            android:layout_weight="1"
            android:background="@drawable/shape_input_frame">

            <ImageView
                android:id="@+id/iv_car_back"
                android:layout_width="@dimen/dimen_25"
                android:layout_height="@dimen/dimen_25"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_14"
                android:background="@mipmap/icon_camera_take" />

            <TextView
                android:id="@+id/tv_car_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_car_back"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_7"
                android:text="@string/i_button_car_back"
                android:textColor="@color/camera_gray_90"
                android:textSize="@dimen/dimen_13" />

        </RelativeLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>