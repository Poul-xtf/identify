<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <com.wotransfer.identify.view.Camera2Preview
        android:id="@+id/camera_p1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/camera_crop_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/camera_crop"
                android:layout_width="@dimen/dimen_300"
                android:layout_height="@dimen/dimen_211"
                android:layout_centerInParent="true" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_crop"
            android:layout_width="@dimen/dimen_300"
            android:layout_height="@dimen/dimen_211"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="220dp"
            android:background="@mipmap/icon_resident_front" />


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_5"
            android:layout_below="@+id/camera_crop_container"
            android:layout_marginLeft="@dimen/dimen_60"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_marginRight="@dimen/dimen_60"
            android:max="3"
            android:progress="1"
            android:progressDrawable="@drawable/shape_progress" />
    </RelativeLayout>


</FrameLayout>